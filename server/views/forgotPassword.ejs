<%- include('./partials/header.ejs') %>

  <h3 style="font-size: 18px; color: black;">Hello <%= name %>!</h3>
  <p style="font-size: 16px;  color: #333;">You are receiving this email because we received a password reset request
    for your account.</p>
  <br>
  <a href="<%= resetUrl %>"
    style="background: #273e52; padding: 15px 25px; color: white; font-weight: bold; text-decoration: none; border-radius: 5px;">
    Reset Password </a>
  <br>
  <br>
  <p style="font-size: 16px;  color: #333;">This password reset link will expire in 60 minutes.</p>
  <p style="font-size: 16px;  color: #333;">If you did not request a password reset, no further action is required.</p>
  <br>
  <p style="font-size: 16px;  color: #333; margin: 0;">Regards,</p>
  <p style="font-size: 16px;  color: #333; margin: 0 0 10px;">StarterKit</p>
  <hr>
  <p style="font-size: 16px;  color: #333;">
    If you're having trouble clicking the "Reset Password" button, copy and paste the URL below into your web browser:
    <a href="<%= resetUrl %>">
      <%= resetUrl %>
    </a>
  </p>

  <%- include('./partials/footer.ejs') %>